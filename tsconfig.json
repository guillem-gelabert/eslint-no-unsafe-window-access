{
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "**/*.test.*", "**/*.spec.*"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "module": "NodeNext",
    "target": "es2020",
    "lib": ["es2020"],
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext"
  }
}
